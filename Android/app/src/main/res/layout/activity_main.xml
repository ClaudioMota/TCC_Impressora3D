<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tcc.impressora3d.MainActivity">

    <Button
        android:text="Imprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imprimir"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Carregar gcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carregar"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/imprimir"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Conectar via Wireless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conectar"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/carregar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Definir rede da impressora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/definirRede"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/conectar"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/progresso"
        android:layout_above="@+id/definirRede"
        android:layout_alignLeft="@+id/definirRede"
        android:layout_alignStart="@+id/definirRede"
        android:layout_alignRight="@+id/definirRede"
        android:layout_alignEnd="@+id/definirRede" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progresso"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/tProgresso"
        android:textSize="18sp" />

</RelativeLayout>
